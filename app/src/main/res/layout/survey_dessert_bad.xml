<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.survey.SurveyDessertBad">

    <data>
        <variable
            name="surveyBad"
            type="com.minseo.gogogo_ver2.view.survey.SurveyDessertBad" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopubworld_dotum_pro_medium"
            android:textStyle="bold"
            android:text="Q. 슬퍼 VS 화나 VS 우울해"
            android:layout_marginTop="70dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopubworld_dotum_pro_medium"
            android:text="사진을 클릭해주세요"
            android:textSize="17dp"
            android:textColor="#8c8c8c"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_sad"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="@{() -> surveyBad.pickSad()}"
                    app:srcCompat="@drawable/sad" />

                <TextView
                    android:id="@+id/select7_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="슬퍼" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_angry"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="@{() -> surveyBad.pickAngry()}"
                    app:srcCompat="@drawable/anger" />

                <TextView
                    android:id="@+id/select8_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="화나" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_depressed"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="@{() -> surveyBad.pickDepressed()}"
                    app:srcCompat="@drawable/depressed" />

                <TextView
                    android:id="@+id/select9_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="우울해" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>