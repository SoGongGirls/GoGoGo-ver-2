<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".survey.SurveyMealMeat">

    <data>
        <variable
            name="surveyMeat"
            type="com.minseo.gogogo_ver2.survey.SurveyMealMeat" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopubworld_dotum_pro_medium"
            android:textStyle="bold"
            android:text="Q. 돼지 VS 소 VS 닭"
            android:layout_marginTop="70dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopubworld_dotum_pro_medium"
            android:text="사진을 클릭해주세요"
            android:textSize="17dp"
            android:textColor="#8c8c8c"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/select1"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="selectOne"
                    app:srcCompat="@drawable/pork"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/select1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="돼지고기" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/select2"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="selectTwo"
                    app:srcCompat="@drawable/steak"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/select2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="소고기" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/select3"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="selectThree"
                    app:srcCompat="@drawable/chicken" />

                <TextView
                    android:id="@+id/select3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="닭고기" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/select4"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="selectFour"
                    app:srcCompat="@drawable/lamb"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/select4_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="다른거" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
