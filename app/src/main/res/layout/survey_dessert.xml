<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="survey.SurveyDessert">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopubworld_dotum_pro_medium"
            android:textStyle="bold"
            android:text="Q. 기분좋아 VS 기분안좋아"
            android:layout_marginTop="70dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopubworld_dotum_pro_medium"
            android:text="사진을 클릭해주세요"
            android:textSize="17dp"
            android:textColor="#8c8c8c"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/good"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="selectGood"
                    app:srcCompat="@drawable/joy" />

                <TextView
                    android:id="@+id/select5_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="기분좋아" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bad"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="selectBad"
                    app:srcCompat="@drawable/depressed" />

                <TextView
                    android:id="@+id/select6_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="기분안좋아" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>