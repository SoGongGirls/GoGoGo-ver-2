<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.storeInfo.StoreList">

    <data>
        <variable
            name="storeItem"
            type="com.minseo.gogogo_ver2.view.storeInfo.StoreList" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/storeImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/no_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/kopubworld_dotum_pro_medium"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="가게 이름" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/star_2554118" />

                <TextView
                    android:id="@+id/storeGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:text="평점" />

                <TextView
                    android:id="@+id/storeDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:textColor="#969696"
                    android:gravity="right"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:textSize="16sp"
                    android:text="거리" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
