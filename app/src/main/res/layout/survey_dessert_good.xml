<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q. 찬거 VS 따뜻한거"
        android:textStyle="bold"
        android:fontFamily="@font/kopubworld_dotum_pro_medium"
        android:layout_marginTop="70dp"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진을 클릭해주세요"
        android:fontFamily="@font/kopubworld_dotum_pro_medium"
        android:textSize="17dp"
        android:textColor="#8c8c8c"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/select5"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:onClick="selectFive"
                app:srcCompat="@drawable/elsa" />

            <TextView
                android:id="@+id/select5_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubworld_dotum_pro_medium"
                android:layout_marginTop="5dp"
                android:textColor="#666666"
                android:textSize="20dp"
                android:text="찬거" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/select6"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:onClick="selectSix"
                app:srcCompat="@drawable/olaf" />

            <TextView
                android:id="@+id/select6_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubworld_dotum_pro_medium"
                android:layout_marginTop="5dp"
                android:textColor="#666666"
                android:textSize="20dp"
                android:text="따뜻한거" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>