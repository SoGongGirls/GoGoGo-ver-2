<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.survey.SurveyMeal">

    <data>
        <variable
            name="surveyMeal"
            type="com.minseo.gogogo_ver2.view.survey.SurveyMeal" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopubworld_dotum_pro_medium"
            android:textStyle="bold"
            android:text="Q. 고기 VS 해산물 VS 향신료"
            android:layout_marginTop="70dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopubworld_dotum_pro_medium"
            android:text="사진을 클릭해주세요"
            android:textSize="17dp"
            android:textColor="#8c8c8c"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_meat"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="@{() -> surveyMeal.pickMeat()}"
                    app:srcCompat="@drawable/pork"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/select1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="고기" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/bt_fish"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="@{() -> surveyMeal.pickFish()}"
                    app:srcCompat="@drawable/seafood"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/select2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="해산물" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_exotic"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="@{() -> surveyMeal.pickExotic()}"
                    app:srcCompat="@drawable/mara" />

                <TextView
                    android:id="@+id/select3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="이국적인맛" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_else"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:onClick="@{() -> surveyMeal.pickElse()}"
                    app:srcCompat="@drawable/tteokbokki"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/select4_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopubworld_dotum_pro_medium"
                    android:layout_marginTop="5dp"
                    android:textColor="#666666"
                    android:textSize="20dp"
                    android:text="셋다싫어" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>